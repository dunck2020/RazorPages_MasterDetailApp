@page
@model RazorPages_MasterDetailApp.Pages.Sammi.EditModel

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/SammisStyles.css" type="text/css" />
</head>

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<div class="row" style="background-color: lightgray; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; color: darkorange; border-radius:10px;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Book.ID" />
            <div class="form-group">
                <label asp-for="Book.Title" class="control-label"></label>
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Author" class="control-label"></label>
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Genres" class="control-label"></label>
                <input asp-for="Book.Genres" class="form-control" />
                <span asp-validation-for="Book.Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PageCount" class="control-label"></label>
                <input asp-for="Book.PageCount" class="form-control" />
                <span asp-validation-for="Book.PageCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.PubYear" class="control-label"></label>
                <input asp-for="Book.PubYear" class="form-control" />
                <span asp-validation-for="Book.PubYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Description" class="control-label"></label>
                <input asp-for="Book.Description" class="form-control" />
                <span asp-validation-for="Book.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book.Review" class="control-label"></label>
                <input asp-for="Book.Review" class="form-control" />
                <span asp-validation-for="Book.Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
