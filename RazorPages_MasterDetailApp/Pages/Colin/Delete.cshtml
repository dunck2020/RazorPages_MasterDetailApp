@page
@model RazorPages_MasterDetailApp.Pages.Colin.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "Shared/_coharouLayout";
}
<div class="container">
    <div class="card m-2 border-dark">
        <div class="card-body p-3">
            <div class="card-title">
                <h5 class="card-title">Book Deletion</h5>
            </div>
            <div class="card-text">
                Are you sure that you want to delete "@Html.DisplayFor(model => model.Book.Title)" by @Html.DisplayFor(model => model.Book.Author)?
                <br />Once the book has been deleted, it cannot be recovered.
            </div>
            <form method="post" class="mt-3">
                <input type="hidden" asp-for="Book.ID" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
