@page
@model RazorPages_MasterDetailApp.Pages.Colin.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "Shared/_coharouLayout";
}
<div class="container border-dark p-2 bg-dark rounded">
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collSearch">
            Search Options
        </button>
    </div>
    <div id="collSearch" class="collapse show p-3 text-light">
        <form>
            <p>
                Title: <input type="text" asp-for="TitleSearch" />
            </p>
            <p>
                Author: <input type="text" asp-for="AuthorSearch" />
            </p>
            <p>
                Genre: <input type="text" asp-for="GenreSearch" />
            </p>
            <div>
                <input class="btn btn-primary" type="submit" value="Filter" />
            </div>
            <div class="mt-5 p-1">
                Sorting Options
            </div>
            <ul class="list-group list-group-horizontal text-primary">
                <li class="list-group-item">
                    <a class="text-primary" asp-page="./Index" asp-route-sortType="title">Title</a>
                </li>
                <li class="list-group-item">
                    <a class="text-primary" asp-page="./Index" asp-route-sortType="pubyear">Publication Year</a>
                </li>
                <li class="list-group-item">
                    <a class="text-primary" asp-page="./Index" asp-route-sortType="pagecount">Page Count</a>
                </li>
            </ul>
        </form>
    </div>
</div>
<div>
    @foreach (var b in Model.Book)
    {
        <div class="card m-2 border-dark">
            <div class="card-body p-3">
                <h5 class="card-title">@Html.DisplayFor(modelItem => b.Title)</h5>
                <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => b.Author)</h6>
                <ul class="list-group list-group-horizontal mt-2 mb-2">
                    <li class="list-group-item">
                        <p class="card-text">
                            @Html.DisplayNameFor(model => model.Book[0].Genres):
                            @Html.DisplayFor(modelItem => b.Genres)
                        </p>
                    </li>
                    <li class="list-group-item">
                        <p class="card-text">
                            @Html.DisplayNameFor(model => model.Book[0].PubYear):
                            @Html.DisplayFor(modelItem => b.PubYear)
                        </p>
                    </li>
                    <li class="list-group-item">
                        <p class="card-text">
                            @Html.DisplayNameFor(model => model.Book[0].PageCount):
                            @Html.DisplayFor(modelItem => b.PageCount)
                        </p>
                    </li>
                </ul>
                <a class="card-link p-1" asp-page="./Details" asp-route-id="@b.ID">More details...</a>
            </div>
        </div>
    }
</div>